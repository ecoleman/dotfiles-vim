#!/bin/bash -x

#FIELDS="+afkst"
FIELDS="+afksSimt"

echo "Generating Core Tags"
time ctags-exuberant -f ~/.vim.tags/pf_core \
-h ".php" -R \
--exclude="\.svn" \
--exclude="*\.sql" \
--totals=yes \
--tag-relative=yes \
--fields=$FIELDS \
--PHP-kinds=+cf ~/www/phpfission/core/classes ~/www/phpfission/core/functions

echo "Generating Trunk CMS Tags"
time ctags-exuberant -f ~/.vim.tags/pf_cms-trunk \
-h ".php" -R \
--exclude="\.svn" \
--exclude="*\.sql" \
--totals=yes \
--tag-relative=yes \
--fields=$FIELDS \
--languages=php \
--PHP-kinds=+cf ~/www/phpfission/projects/cms/trunk

