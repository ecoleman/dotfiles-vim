#!/bin/bash

. ~/.vim/bin/tag_helper

CORE_PATH=${CORE_PATH:-/srv/phpfission/core}
CMS_PATH=${CMS_PATH:-/srv/phpfission/projects/cms/trunk}

echo "Generating Core Tags"
gen_php_tags $TAGDIR/pf_core "$CORE_PATH/classes" "$CORE_PATH/functions"

echo "Generating Core Class Library Tags"
gen_php_tags $TAGDIR/pf_core-classlib "$CORE_PATH/class_library"

echo "Generating Trunk CMS Tags"
gen_php_tags $TAGDIR/pf_cms-trunk $CMS_PATH

